<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.adcoretechnologies.rny.auth.register.RegisterActivity">

    <LinearLayout
        style="@style/AppTheme.LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/space_x2"
        android:orientation="vertical">


        <android.support.design.widget.TextInputLayout style="@style/AppTheme.TextInputLayout">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/etName"
                style="@style/AppTheme.EditText"
                android:drawableLeft="@drawable/ic_user_name"
                android:hint="Full Name"
                android:inputType="textCapWords" />
        </android.support.design.widget.TextInputLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/AppTheme.TextView"
                android:layout_width="wrap_content"
                android:drawableLeft="@drawable/sv_gender"
                android:gravity="left|center"
                android:text="Gender"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/font_x2" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/space_x0"
                android:paddingLeft="@dimen/space_x3"
                android:paddingRight="@dimen/space_x3"
                android:paddingTop="@dimen/space_x1">

                <RadioButton
                    android:id="@+id/rbMale"
                    style="@style/AppTheme.Radio"
                    android:text="Male" />

                <RadioButton
                    android:id="@+id/rbFemale"
                    style="@style/AppTheme.Radio"
                    android:text="Female" />
            </RadioGroup>
        </LinearLayout>

        <android.support.design.widget.TextInputLayout style="@style/AppTheme.TextInputLayout">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/etEmail"
                style="@style/AppTheme.EditText"
                android:drawableLeft="@drawable/ic_email"
                android:hint="Email id"
                android:inputType="textEmailAddress" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout style="@style/AppTheme.TextInputLayout">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/etPassword"
                style="@style/AppTheme.EditText"
                android:drawableLeft="@drawable/ic_password"
                android:hint="Password"
                android:inputType="textPassword" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            style="@style/AppTheme.TextView"
            android:gravity="center"
            android:text="Password should be minimum 6 characters"
            android:textColor="@color/colorAccent2"
            android:textSize="@dimen/font_x1" />

        <android.support.design.widget.TextInputLayout style="@style/AppTheme.TextInputLayout">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/etContactNumber"
                style="@style/AppTheme.EditText"
                android:drawableLeft="@drawable/ic_smartphone"
                android:hint="Contact Number"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/tvLocality"
            style="@style/AppTheme.TextView"
            android:layout_marginBottom="@dimen/space_x2"
            android:layout_marginTop="@dimen/space_x2"
            android:drawableLeft="@drawable/ic_locality"
            android:gravity="left"
            android:text="Touch to select locality"
            android:textSize="@dimen/font_x2" />

        <Button
            android:id="@+id/btnRegister"
            style="@style/AppTheme.Button"
            android:text="Register" />

        <TextView
            android:id="@+id/tvLogin"
            style="@style/AppTheme.TextView"
            android:gravity="center"
            android:text="Click here to login if you have account" />

    </LinearLayout>
</ScrollView>
