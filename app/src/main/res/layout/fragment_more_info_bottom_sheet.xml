<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:padding="@dimen/space_x2">

    <View
        style="@style/AppTheme.Divider"
        android:background="@color/colorWhite"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_x1"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llCall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ico_color="@color/colorWhite"
                app:ico_icon="ion-ios-telephone"
                app:ico_size="@dimen/space_x4"
                tools:ignore="MissingPrefix" />

            <TextView
                style="@style/AppTheme.TextView"
                android:gravity="center"
                android:padding="@dimen/space_x0"
                android:text="Call Now"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_x2" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"></View>

        <LinearLayout
            android:id="@+id/llDirection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ico_color="@color/colorWhite"
                app:ico_icon="ion-navigate"
                app:ico_size="@dimen/space_x4"
                tools:ignore="MissingPrefix" />

            <TextView
                style="@style/AppTheme.TextView"
                android:gravity="center"
                android:padding="@dimen/space_x0"
                android:text="Direction"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_x2" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"></View>

        <LinearLayout
            android:id="@+id/llWishlist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ico_color="@color/colorWhite"
                app:ico_icon="ion-android-star"
                app:ico_size="@dimen/space_x4"
                tools:ignore="MissingPrefix" />

            <TextView
                style="@style/AppTheme.TextView"
                android:gravity="center"
                android:padding="@dimen/space_x0"
                android:text="Favorite"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_x2" />
        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/AppTheme.Divider"
        android:background="@color/colorWhite"></View>
</LinearLayout>