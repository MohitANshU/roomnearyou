<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        style="@style/AppTheme.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            style="@style/AppTheme.LinearLayout.CardView"
            android:layout_marginBottom="@dimen/space_x2"
            android:padding="0dp">


            <ImageView
                android:id="@+id/ivPropertyIcon"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/bg_sample" />

            <LinearLayout style="@style/AppTheme.LinearLayout.CardView">

                <TextView
                    android:id="@+id/tvHits"
                    style="@style/AppTheme.TextView"
                    android:layout_width="wrap_content"
                    android:layout_gravity="right"
                    android:background="@color/colorWhite"
                    android:elevation="4dp"
                    android:gravity="right"
                    android:padding="2dp"
                    android:text="{fou-crown} 0 Hits"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>


            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="bottom"
                android:background="@drawable/bg_black_trans"
                android:gravity="bottom"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/space_x2"
                    android:layout_marginLeft="@dimen/space_x2"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvPropertyName"
                        style="@style/AppTheme.TextView"
                        android:layout_width="wrap_content"
                        android:padding="0dp"
                        android:text="Property Name"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvPostedOn"
                        style="@style/AppTheme.TextView"
                        android:layout_below="@id/tvPropertyName"
                        android:padding="0dp"
                        android:text="{fou-clock}  "
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/font_x1" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/ivDealType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="-10dp"
                    android:layout_marginRight="@dimen/space_x1"
                    android:src="@drawable/sv_for_rent"
                    app:layout_widthPercent="20%" />


                <TextView
                    android:id="@+id/tvOccupiedOn"
                    style="@style/AppTheme.TextView.CardView"
                    android:layout_alignParentRight="true"
                    android:gravity="left"
                    android:text="2016-02-12"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="@dimen/font_x2"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvDealType"
                    style="@style/AppTheme.TextView"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:background="@color/colorAccent"
                    android:elevation="4dp"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="Name"
                    android:textColor="@color/colorWhite"
                    android:visibility="gone"
                    app:layout_widthPercent="20%" />
            </android.support.percent.PercentRelativeLayout>
        </FrameLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>