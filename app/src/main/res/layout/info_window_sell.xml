<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                style="@style/AppTheme.LinearLayout.CardView"
                android:padding="0dp">


                <ImageView
                    android:id="@+id/ivPropertyImage"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/bg_sample3" />

                <LinearLayout style="@style/AppTheme.LinearLayout.CardView">

                    <TextView
                        android:id="@+id/tvPrice"
                        style="@style/AppTheme.TextView"
                        android:layout_width="wrap_content"
                        android:layout_gravity="right"
                        android:background="@color/colorWhite"
                        android:elevation="4dp"
                        android:gravity="right"
                        android:padding="2dp"
                        android:text=""
                        android:textColor="@color/colorPrimary" />
                </LinearLayout>


                <android.support.percent.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/bg_black_trans_for_info"
                    android:gravity="bottom"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/space_x2"
                        android:layout_marginLeft="@dimen/space_x2"
                        android:gravity="bottom"
                        app:layout_widthPercent="70%"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvPropertyName"
                            style="@style/AppTheme.TextView"
                            android:layout_width="wrap_content"
                            android:padding="0dp"
                            android:text="Not Available"
                            android:textColor="@color/colorWhite"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvLocality"
                            style="@style/AppTheme.TextView"
                            android:layout_below="@id/tvPropertyName"
                            android:padding="0dp"
                            android:text="{fou-clock} Not Available "
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/font_x1" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivDealType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="-10dp"
                        android:layout_marginRight="@dimen/space_x1"
                        android:src="@drawable/sv_for_sale"
                        app:layout_widthPercent="20%" />

                </android.support.percent.PercentRelativeLayout>


            </FrameLayout>

            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_widthPercent="50%">

                    <TextView
                        android:id="@+id/tvArea"
                        style="@style/AppTheme.TextView.Info"
                        android:text="{gmd-store} Not available" />

                    <TextView
                        android:id="@+id/tvFloorNumber"
                        style="@style/AppTheme.TextView.Info"
                        android:text="{ion-ios-paw} Not available" />

                    <TextView
                        android:id="@+id/tvHouseType"
                        style="@style/AppTheme.TextView.Info"
                        android:text="{ion-social-buffer} Not available" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical"
                    app:layout_widthPercent="50%">

                    <TextView
                        android:id="@+id/tvHouseCondition"
                        style="@style/AppTheme.TextView.Info"
                        android:text="{ion-ios-analytics} Not Available" />

                    <TextView
                        android:id="@+id/tvDistance"
                        style="@style/AppTheme.TextView.Info"
                        android:gravity="center_vertical"
                        android:text=" {ion-android-navigate} Not Available"
                        app:ico_color="@color/colorPrimary"
                        tools:ignore="MissingPrefix" />

                    <TextView
                        android:id="@+id/tvCall"
                        style="@style/AppTheme.TextView.Info"
                        android:gravity="center_vertical"
                        android:text="{ion-ios-telephone} Call now" />

                </LinearLayout>


            </android.support.percent.PercentRelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>